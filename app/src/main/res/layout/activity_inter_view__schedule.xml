        <EditText
            android:id="@+id/enterView_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:drawableLeft="@drawable/ic_job_apply"
            android:drawablePadding="5dp"
            android:hint="Job Apply"
            android:inputType="textCapCharacters"
            android:padding="10dp" />

        <EditText
            android:id="@+id/interview_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:hint="InterView Date "
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/enter_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"

            android:hint="Address"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/contract_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_person1"
            android:fontFamily="sans-serif"
            android:hint="Contract Person name "
            android:inputType="textCapCharacters"
            android:padding="10dp" />





        <EditText
            android:id="@+id/contract_person_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:drawableLeft="@drawable/mob"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"

            android:hint="Contract person Mobile"
            android:inputType="phone"
            android:padding="10dp" />

        <EditText
            android:id="@+id/interview_comment"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"

            android:fontFamily="sans-serif"
            android:gravity="top|left"
            android:hint="Enter the Comment"
            android:inputType="textMultiLine" />


        <Button
            android:id="@+id/interview_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:text="Submit "
            android:textColor="@color/colorWhite"

            android:textSize="20dp" />


    </LinearLayout>


    </android.support.v7.widget.CardView>

</ScrollView>
